  body
    .container
      .row
        .panel.panel-primary
          .panel-body
            - var m = message
            if m != ""
              .alert.alert-danger #{message}
            form(action='/registration', role='form')
              .header
                h3 Create account
              br
              .form-group(style='text-align: center;')
                // <button id="facebookSubmit" type="submit" class="btn btn-info btn-block">Log In with Facebook</button>
                a.button.linkedin(href='/auth/linkedin')
