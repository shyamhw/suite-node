                      li(data-target='#carousel', data-slide-to='1')
                      li(data-target='#carousel', data-slide-to='2')
                    .carousel-inner
                      .item
                        img(src='../static/img/phone.png', alt='')
                      .item.active.left
                        img(src='../static/img/phone.png', alt='')
                      .item.next.left
